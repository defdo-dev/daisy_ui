{
  "description": "The JS Layer to interact with phoenix app.",
  "scripts": {
    "build.js": "node esbuild.js",
    "watch.js": "node esbuild.js --watch",
    "deploy.js": "node esbuild.js --deploy",
    "build.css": "tailwindcss --input=css/app.css --output=../priv/static/assets/app.css --postcss",
    "watch.css": "tailwindcss --input=css/app.css --output=../priv/static/assets/app.css --postcss --watch",
    "deploy.css": "NODE_ENV=production tailwindcss --input=css/app.css --output=../priv/static/assets/app.css --postcss --minify"
  },
  "author": "Roberto Estrada <restrada@paridin.com>",
  "license": "MIT",
  "dependencies": {
    "phoenix": "file:../deps/phoenix",
    "phoenix_html": "file:../deps/phoenix_html",
    "phoenix_live_view": "file:../deps/phoenix_live_view",
    "topbar": "^1.0.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.4",
    "autoprefixer": "^10.4.7",
    "daisyui": "^2.19.1",
    "esbuild": "^0.14.49",
    "esbuild-copy-static-files": "^0.1.0",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "tailwindcss": "^3.1.6"
  }
}
